{
  "name": "@project/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "dotenv -e ../../.env.local -- vitest run",
    "test:watch": "dotenv -e ../../.env.local -- vitest",
    "test:coverage": "dotenv -e ../../.env.local -- vitest run --coverage"
  },
  "dependencies": {
    "@fitzzero/quickdraw-core": "link:../../../quickdraw",
    "@project/db": "workspace:*",
    "@project/shared": "workspace:*",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.18.0",
    "jose": "^5.2.0",
    "socket.io": "^4.7.4",
    "winston": "^3.11.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@project/eslint-config": "workspace:*",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^1.3.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.56.0",
    "socket.io-client": "^4.7.4",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.3.0"
  }
}
